---
const menuItems = [
  { href: "/", text: "Accueil" },
  { href: "/textes", text: "Textes" },
  { href: "/propositions", text: "Propositions" },
];
---

<header>
  <nav aria-label="Navigation principale">
    <div class="nav-container">
      <a href="/" id="logo">Ici, On Ecrit</a>

      <ul class="desktop-menu">
        {
          menuItems.map((item) => (
            <li>
              <a href={item.href}>{item.text}</a>
            </li>
          ))
        }
      </ul>

      <div class="mobile-menu">
        <button
          class="menu-button"
          aria-expanded="false"
          aria-controls="mobile-menu-list"
          aria-label="Ouvrir le menu de navigation"
        >
          <span></span>
          <span></span>
          <span></span>
        </button>
        <ul class="menu" id="mobile-menu-list">
          {
            menuItems.map((item) => (
              <li>
                <a href={item.href}>{item.text}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </nav>
</header>

<style lang="scss">
  @use "@styles/config/variables" as *;
  @use "@styles/config/mixins" as *;

  header {
    width: 100%;
    margin: 1rem auto;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    width: 90%;
    margin: 0 auto;
    z-index: 5;
  }

  nav {
    width: 100%;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    margin: 0;
    padding: 0;
  }

  #logo {
    font-size: var(--h3);
    font-family: var(--font-title);
    z-index: 20;
  }

  a {
    font-size: var(--h2);
    font-family: var(--font-text);
    text-decoration: none;
    color: var(--primary-color);
    transition: color 0.4s ease;

    &:hover {
      color: var(--tertiary-color);
    }

    @include keyboard-focus(var(--primary-color));
  }

  .desktop-menu {
    display: none;
    align-items: center;
    gap: 3rem;
    white-space: nowrap;
  }

  .menu-button {
    height: 30px;
    width: 30px;
    position: relative;
    background-color: transparent;
    z-index: 20;
    border: none;
    cursor: pointer;
    transition: transform 0.2s ease;

    @include button-keyboard-focus(var(--primary-color));

    span {
      height: 3px;
      width: 100%;
      background-color: var(--primary-color);
      border-radius: 25px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      transition: 0.2s ease;
    }
    span:first-child {
      top: 25%;
    }
    span:last-child {
      top: 75%;
    }
  }

  .active {
    span:first-child {
      top: 50%;
      transform: translate(-50%, -50%) rotate(45deg);
    }
    span:nth-child(2) {
      opacity: 0;
    }
    span:last-child {
      top: 50%;
      transform: translate(-50%, -50%) rotate(-45deg);
    }
  }

  .menu {
    display: none;
    position: fixed;
    width: 100vw;
    height: 100vh;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    top: 0;
    left: 0;
    background-color: var(--secondary-color);
    padding: 10rem 0;
    z-index: -10;
    transition: 0.5s ease;
    opacity: 0;
    overflow: auto;

    li {
      margin: 0;
    }

    a {
      color: var(--primary-color);
      font-size: var(--h2);
      padding: 1rem 2rem;
      display: block;
      text-align: center;

      @include keyboard-focus(var(--primary-color));
    }
  }

  .show {
    display: flex;
    opacity: 1;
    transition: 0.3s ease-in-out;
    z-index: 10;
    overflow-y: auto;
  }

  :global(body.no-scroll),
  :global(html.no-scroll) {
    overflow: hidden;
  }

  @include breakpoint-up($breakpoint-desktop) {
    header {
      z-index: 100;
    }

    #logo {
      font-size: var(--h1);
    }

    .desktop-menu {
      display: flex;
      align-items: center;
      gap: 3rem;
      white-space: nowrap;
    }

    .mobile-menu {
      display: none;
    }
  }
</style>

<script>
  import "/src/scripts/hamburgerMenu.js";
</script>
