---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const posts = (await getCollection("textes")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Textes">
  <main>
    <section class="container">
      <ul class="article-list">
        {
          posts.map((post) => (
            <li class="article-card">
              <a href={`/textes/${post.slug}/`}>
                {post.data.heroImage && (
                  <div class="card-image">
                    <Image src={post.data.heroImage} alt="" />
                  </div>
                )}
                <div class="card-content">
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    {post.data.pubDate.toLocaleDateString("fr-FR", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </p>
                  {post.data.description && (
                    <p class="description">{post.data.description}</p>
                  )}
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Layout>

<style lang="scss">
  @use "@styles/config/variables" as *;
  @use "@styles/config/mixins" as *;

  .article-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    list-style-type: none;
    margin: 2rem 0;
    padding: 0;
  }

  .article-card {
    border-radius: 1.5rem;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    overflow: hidden;

    a {
      display: flex;
      flex-direction: column; // Mobile first: vertical
      text-decoration: none;
      color: inherit;
      height: 100%;
    }

    &:hover {
      transform: translateY(-4px);
      box-shadow:
        0 10px 15px -3px rgba(0, 0, 0, 0.1),
        0 4px 6px -2px rgba(0, 0, 0, 0.05);

      .title {
        color: var(--primary-color);
      }
    }
  }

  .card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;

    img {
      width: 70%;
      height: 100%;
      margin: auto;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
  }

  .article-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .title {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    line-height: 1.2;
    color: rgb(var(--black));
    transition: color 0.2s ease;
  }

  .date {
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    color: rgb(var(--gray));
  }

  .description {
    margin: 0;
    color: var(--paragraph-color);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3; // Limit to 3 lines
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  // Desktop Layout
  @include breakpoint-up($breakpoint-desktop) {
    .article-card {
      a {
        flex-direction: row; // Horizontal layout
        align-items: stretch;
      }
    }

    .card-image {
      width: 35%; // Takes up about 1/3 of the card width
      height: auto; // Full height of the card
      min-height: 250px; // Minimum height to look good
    }

    .card-content {
      width: 65%;
      padding: 2rem;
      justify-content: center; // Center content vertically
    }

    .title {
      font-size: 1.75rem;
    }
  }
</style>
