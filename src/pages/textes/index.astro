---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const posts = (await getCollection("textes")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Textes">
  <div class="main-title">
    <h2>Textes</h2>
  </div>
  <main>
    <section class="container">
      <ul class="article-list">
        {
          posts.map((post) => (
            <li class="article-card">
              <a href={`/textes/${post.slug}/`}>
                {post.data.heroImage && (
                  <div class="card-image">
                    <Image src={post.data.heroImage} alt="" />
                  </div>
                )}
                <div class="card-content">
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    {post.data.pubDate.toLocaleDateString("fr-FR", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </p>
                  {post.data.description && (
                    <p class="description">{post.data.description}</p>
                  )}
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Layout>

<style lang="scss">
  @use "@styles/config/variables" as *;
  @use "@styles/config/mixins" as *;

  .main-title {
    margin: 1rem auto;
    border-bottom: 3px solid var(--tertiary-color);
    width: 90%;
    max-width: 1200px;
    h2 {
      margin: 0;
      padding: 0.5rem;
    }
  }

  .article-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    list-style-type: none;
    margin: 2rem 0;
    padding: 0;
  }

  .article-card {
    border-radius: 20px;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    overflow: hidden;

    a {
      display: flex;
      text-decoration: none;
      color: inherit;
      height: 100%;
    }

    // Default Layout Logic (Mobile First)

    // First Article: Prominent, Big, Vertical
    &:first-child {
      a {
        flex-direction: column;
      }
      .card-image {
        width: 100%;
        height: 200px; // Smaller base height for mobile
      }
    }

    // Other Articles: Horizontal Capsules
    &:not(:first-child) {
      a {
        flex-direction: row; // Horizontal layout even on mobile
        align-items: stretch;
      }
      .card-image {
        width: 35%; // Adequate width for image
        height: 150px; // Reduced min-height for mobile
      }
      .card-content {
        width: 65%;
        padding: 1rem;
        justify-content: center;
      }
      .title {
        font-size: 1.1rem; // Smaller title for side-by-side on mobile
        margin-bottom: 0.25rem;
      }
      .date {
        margin-bottom: 0.5rem;
        font-size: 0.8rem;
      }
      .description {
        -webkit-line-clamp: 3;
        font-size: 0.9rem;
      }
    }
  }

  .card-image {
    background-color: #f0f0f0; // Placeholder bg
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;

    img {
      width: 100%;
      height: 100%;
      margin: auto;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
  }

  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .title {
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
    color: rgb(var(--black));
    transition: color 0.2s ease;
  }

  .date {
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    color: rgb(var(--gray));
  }

  .description {
    margin: 0;
    color: var(--paragraph-color);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  // Desktop Enhancements
  @include breakpoint-up($breakpoint-desktop) {
    .article-card {
      &:first-child {
        .card-image {
          height: 450px;
        }
        .card-content {
          padding: 2.5rem;
        }
        .title {
          font-size: 2.5rem;
        }
        .description {
          font-size: 1.125rem;
          -webkit-line-clamp: 4;
        }
      }

      &:not(:first-child) {
        .card-image {
          width: 30%;
          min-height: 250px;
        }
        .card-content {
          width: 70%;
          padding: 2rem;
        }
        .title {
          font-size: 1.75rem;
          margin-bottom: 0.5rem;
        }
        .description {
          font-size: 1rem;
        }
      }
    }
    .article-card:hover .card-image img {
      transform: scale(1.05);
    }
  }
</style>
